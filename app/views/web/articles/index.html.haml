.container
  %a.pull-right
    %h1= t('articles')
  - @articles.each do |article|
    .col-md-15
      .row.no-gutters.border.rounded.overflow-hidden.flex-md-row.mb-4.shadow-sm.h-md-250.position-relative
        .col.p-4.d-flex.flex-column.position-static
          %h3.mb-0= article.title
          .mb-1.text-muted= article.updated_at
          %p.card-text.mb-auto= article.author.decorate.name
          %a.stretched-link{:href => article_path(article.id)}= t('more')
