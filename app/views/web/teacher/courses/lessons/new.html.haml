= simple_form_for @lesson, url:  teacher_course_lessons_path do |lesson|
  = lesson.input :title
  = lesson.input :description
  = lesson.input :homework
  = lesson.button :submit, t('.create_lesson'), class: 'btn btn-outline-secondary'
  = link_to t('.cancel'), teacher_courses_path, class: 'btn btn-outline-secondary'