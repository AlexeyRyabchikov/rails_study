= simple_form_for @lesson, url: teacher_lesson_path(@lesson.id) do |lesson|
  = lesson.input :title
  = lesson.input :description
  = lesson.input :homework
  = lesson.association :course, collection: current_teacher.courses, label_method: :title, include_blank: false
  = lesson.button :submit, t('.create_lesson'), class: 'btn btn-outline-secondary'
  = link_to t('.cancel'), teacher_lessons_path, class: 'btn btn-outline-secondary' 