= simple_form_for @teacher, url: teacher_teachers_path do |teacher|
  = teacher.input :first_name
  = teacher.input :last_name
  = teacher.input :email
  = teacher.input :password
  = teacher.input :description
  = teacher.button :submit, class: 'btn btn-outline-secondary'
  = link_to t('.cancel'), teacher_teachers_path, class: 'btn btn-outline-secondary' 