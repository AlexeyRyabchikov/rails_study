%a.pull-right
  %h1= t('personal_account')
= simple_form_for @admin, url: admin_profile_path(@admin.id) do |f|
  = f.input :name
  = f.input :email
  = f.input :password
  = f.button :submit, t('.create_profile'), class: 'btn btn-outline-secondary'
  = link_to t('.cancel'), admin_root_path, class: 'btn btn-outline-secondary' 